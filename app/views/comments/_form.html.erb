<%= form_for([@article, @article.comments.build], class: 'form-horizontal') do |f| %>
  <%= render 'common/errors', resource: @comment %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.label :commenter, class: 'control-label' %>
      <%= f.text_field :commenter, class: 'form-control', type: 'text' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
        <%= f.label :body, class: 'control-label' %>
        <%= f.text_area :body, class: 'form-control', type: 'text', rows: '10' %>
    </div>
  </div>
  <div class="text-center">
      <nav>
        <div class="btn-group form-btn">         
          <%= link_to 'Back', articles_path, class: 'btn btn-primary', role: 'button' %>
          <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning' %>
          <%= f.submit class: 'btn btn-success'%>
        </div>
      </nav>
  </div>
<% end %>

