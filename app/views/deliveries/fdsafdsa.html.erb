<div class="container">
  <div class="background-style">
    <div class="row">
      <div id = "msg", class="msg alert alert-danger col-md-offset-4 col-md-4">
        <p class="text-center"></p>
      </div>
    </div>
    <div class="row">
      <div class="text-center">
        <h1 class="text-info">Cтоимость и сроки доставки</h1>
      </div>
    </div>
    <%= form_tag new_delivery_path,  id: 'form', class: 'form-horizontal' do  %>
    
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= label_tag :category, 'Категория отправления' %>
        <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :description, params[:category_id]), class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= label_tag :from_location, 'Пункт отправления' %>
        <%= select_tag :from_location, options_from_collection_for_select(@locations_all, :first, :last, params[:from_location]), class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= label_tag :to_location, 'Пункт прибытия', for: "to_location" %>
        <%= select_tag :to_location, options_from_collection_for_select(@locations_all, :first, :last, params[:to_location]), class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= label_tag :weight, 'Вес' %>
        <%= number_field_tag 'weight', params[:weight].nil? ? 0.1 : params[:weight], min: 0.1, max: 999, step: 0.1, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= label_tag 'price', 'Цена' %>
        <%= text_field_tag 'price', @result_price, class: 'form-control'%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= label_tag 'term_min', 'Минимальный срок доставки' %>
        <%= text_field_tag 'term_min', @result_term_min, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= label_tag 'term_max', 'Максимальный срок доставки' %>
        <%= text_field_tag 'term_max', @result_term_max, class: 'form-control' %>
      </div>
    </div>
    <div class="form-btn text-center">
      <nav>
         <div class="btn-group">
          <%= link_to 'Назад', categories_path, class: 'btn btn-primary', role: 'button' %>
          
          <%= submit_tag "Рассчитать стоимость", class: 'btn btn-warning', id: 'calculate' %> 
          <%= submit_tag 'Создать', class: 'btn btn-success', role: 'button' %> 
        </div>
      </nav>
    <% end %>
</div>
