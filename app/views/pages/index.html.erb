<div class="jumbotron">
	<h1>Welcome!</h1>
	<p>Rails Simple Authentication App</p>	

      <% if logged_in? %>
        <div class="row">
        <div class="col-md-6 col md-offset-3">
          <h1>Profile</h1>

          <table class="table">
            <tr>
              <th>Name</th>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <th>Email</th>
              <td><%= current_user.email %></td>
            </tr> 
          </table>    
        </div>
        </div>    
      <% end %>	
</div>
